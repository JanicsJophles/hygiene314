<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="fileExtensions" value="java, properties, xml"/>

    <!-- Max 100 characters per line. -->
    <module name="LineLength">
        <property name="max" value="100"/>
    </module>

    <!-- No package statements. -->
    <module name="RegexpSingleline">
        <property name="format" value="^package\s+"/>
        <property name="message" value="Package statements are forbidden."/>
    </module>

    <!-- No 'var' keyword. -->
    <module name="RegexpSingleline">
        <property name="format" value="\bvar\b"/>
        <property name="message" value="The 'var' keyword is forbidden."/>
    </module>

    <module name="TreeWalker">
        <!-- Max 25 lines of code per method. 
             Uses ExecutableStatementCount as a proxy for "code lines inside the method",
             excluding method signature, blank lines, and braces. -->
        <module name="ExecutableStatementCount">
            <property name="max" value="25"/>
            <property name="tokens" value="METHOD_DEF, CTOR_DEF"/>
        </module>

        <!-- Indentation: 4 spaces (no tabs). -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="caseIndent" value="4"/>
        </module>

        <!-- Formatting: One statement per line. -->
        <module name="OneStatementPerLine"/>

        <!-- Braces required for all blocks (even single lines). -->
        <module name="NeedBraces"/>

        <!-- Left brace eol. -->
        <module name="LeftCurly">
            <property name="option" value="eol"/>
        </module>

        <!-- Right brace same line. -->
        <module name="RightCurly">
            <property name="option" value="same"/>
        </module>

        <!-- No wildcard imports. -->
        <module name="AvoidStarImport"/>

        <!-- Forbidden Statements: No break or continue. -->
        <module name="IllegalToken">
            <property name="tokens" value="LITERAL_BREAK, LITERAL_CONTINUE"/>
        </module>
        
        <!-- Forbidden Keywords: No var keyword (Java 11+). -->
        <!-- Note: VAR is available as a token type in newer Checkstyle versions -->
        <!-- If Checkstyle version is older and doesn't support VAR token check, we might need a workaround, 
             but 10.13.0 does support it. -->
        <!-- Forbidden Java 8+ features (lambdas, method references) -->
        <module name="IllegalToken">
            <property name="tokens" value="LAMBDA, METHOD_REF"/>
        </module>

        <!-- No java.util.concurrent classes. -->
        <module name="IllegalImport">
            <property name="illegalPkgs" value="java.util.concurrent"/>
        </module>

        <!-- No Magic Numbers (literals other than -1, 0, 1, 2 are forbidden). -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="-1, 0, 1, 2"/>
        </module>

        <!-- Naming Conventions -->
        <module name="ConstantName">
            <property name="format" value="^[A-Z][A-Z0-9_]*$"/>
        </module>
        <module name="MethodName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="LocalVariableName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="MemberName">
            <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        </module>
        <module name="TypeName">
            <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        </module>

        <!-- Javadoc required for all methods (public and private). -->
        <module name="MissingJavadocMethod">
            <property name="scope" value="private"/>
        </module>
    </module>
</module>
